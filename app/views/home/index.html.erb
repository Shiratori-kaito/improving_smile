<div class="min-h-screen flex items-center justify-center bg-cover bg-center mt-20" style="background-image: url('<%= asset_path('HomeTop.png') %>');">
  <div class="text-center">
    <div class="flex row">
      <h1 class="text-6xl font-semibold text-white mb-10 ml-8 pr-4">Welcome To</h1>
      <h1 h1 class="text-6xl font-semibold text-black mb-10 pr-8">Face</h1>
      <h1 class="text-6xl font-semibold text-white  mb-10">World</h1>
    </div>
    <div class="flex justify-center">
      <% if logged_in? === false %>
        <%= button_to 'ゲスト', guest_login_path, method: :post, class: 'bg-red-500 hover:bg-red-600 shadow-xl shadow-red-700/50 text-white py-3 px-6 rounded-full font-semibold text-3xl transition duration-300' %>
      <% else %>
        <%= link_to 'マイヒストリー', user_path(current_user.id), class: 'bg-red-500 hover:bg-red-600 shadow-xl shadow-red-700/50 text-white py-3 px-6 pt-4 rounded-full font-semibold text-xl transition duration-300' %>
      <% end %>
      <%= link_to '撮影', photos_capture_path, class: 'bg-blue-500 hover:bg-blue-600 shadow-xl shadow-blue-700/50 text-white py-3 px-6 rounded-full font-semibold text-3xl transition duration-300' %>
      <%= link_to '投稿一覧', posts_path, class: 'bg-green-500 hover:bg-green-600 shadow-xl shadow-green-700/50 text-white py-3 px-6 rounded-full font-semibold text-3xl transition duration-300' %>
    </div>
  </div>
</div>
