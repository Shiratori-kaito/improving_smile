<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white p-6 rounded-lg shadow-lg w-4/5 md:w-1/2">
    <h1 class="text-2xl font-bold mb-4"><%= t('.title') %></h1>
    <%= form_with model: @user, url: profile_path, local: true, html: { class: "space-y-4" } do |f| %>
      
      <div>
        <%= f.label :email, class: "block font-medium text-sm text-gray-600" %>
        <%= f.email_field :email, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>
      <div>
        <%= f.label :last_name, class: "block font-medium text-sm text-gray-600" %>
        <%= f.text_field :last_name, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>
      <div>
        <%= f.label :first_name, class: "block font-medium text-sm text-gray-600" %>
        <%= f.text_field :first_name, class: "mt-1 p-2 w-full border rounded-md" %>
      </div>
      <div>
        <%= f.label :avatar, class: "block font-medium text-sm text-gray-600" %>
        <%= f.file_field :avatar, class: "mt-1 p-2 w-full border rounded-md", accept: 'image/*', onchange: 'previewImage(preview)' %>
        <%= f.hidden_field :avatar_cache %>
        <div class='mt-3'>
          <%= image_tag @user.avatar.url, id: 'preview', class: 'h-24 w-24 rounded-full object-cover' %>
        </div>
      </div>
      <div>
        <%= f.submit "Update", class: "mt-4 px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function previewImage(input) {
    const preview = document.getElementById('preview');
    const file = input.files[0];
    const reader = new FileReader();

    reader.addEventListener("load", function () {
      preview.src = reader.result;
    }, false);

    if (file) {
      reader.readAsDataURL(file);
    }
  }
</script>
