<p class="text-green-500"><%= notice %></p>

<h1 class="text-2xl font-semibold">Users</h1>
<div id="users" class="mt-4">
  <% @users.each do |user| %>
    <div class="bg-white shadow-md rounded px-6 py-4 mb-4">
      <%= render user %>
      <p class="mt-2">
        <%= link_to "Show this user", user, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 inline-block" %>
