<% flash.each do |message_type, message| %>
  <% case message_type %>
  <% when 'notice'%>
    <div class="animate-flash fixed top-24 translate-x-1/2 right-6 lg:translate-x-0 z-30 w-fit max-w-[90%] lg:max-w-1/2 py-4 px-6 flex justify-center item-center bg-white shadow-lg border border-line-100 rounded-[3px]">
      <p class="text-base font-bold text-dark-blue-200 !leading-none"><%= message %></p>
    </div>
  <% when 'alert'%>
    <div class="animate-flash fixed top-24 translate-x-1/2 right-6 lg:translate-x-0 z-30 w-fit max-w-[90%] lg:max-w-1/2 py-4 px-6 flex justify-center item-center bg-white shadow-lg border border-line-100 rounded-[3px]">
      <p class="text-base font-bold text-secondary-200 "><%= message %></p>
    </div>
  <% else %>
    <p class="alert alert-<%= message_type %>"><%= message %></p>
  <% end %>
<% end %>
