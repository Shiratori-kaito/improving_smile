<!DOCTYPE html>
<html>
  <head>
    <title>ImproveApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div id="root"></div>
    <% if logged_in? %>
      <%= content_tag :div, id: "already-login", data: { id: current_user.id } do %><% end %>
    <% else %>
      <div id="not-login"></div>
    <% end %>
    <%= yield %>
  </body>
</html>
