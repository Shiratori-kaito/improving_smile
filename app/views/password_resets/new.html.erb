<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full md:w-2/3 lg:w-1/2">
      <h1 class="text-2xl font-bold mb-4"><%= t '.title' %></h1>
      <%= form_with url: password_resets_path, local: true, class: "space-y-4" do |f| %>
        <div class="flex flex-col space-y-2">
          <%= f.label :email, "Email", class: 'font-semibold' %>
          <%= f.email_field :email, class: 'px-4 py-2 border rounded shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
        </div>
        <%= f.submit "パスワードリセット", class: 'py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
      <% end %>
    </div>
  </div>
</div>
