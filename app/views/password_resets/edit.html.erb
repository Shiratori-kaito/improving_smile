<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full md:w-2/3 lg:w-1/2">
      <h1 class="text-2xl font-bold mb-4"><%= t '.title' %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), local: true, class: "space-y-4" do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="flex flex-col space-y-2">
          <%= f.label :email, class: 'font-semibold' %>
          <span class="block bg-gray-100 p-2 rounded"><%= @user.email %></span>
        </div>
        <div class="flex flex-col space-y-2">
          <%= f.label :password, class: 'font-semibold' %>
          <%= f.password_field :password, class: 'px-4 py-2 border rounded shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
        </div>
        <div class="flex flex-col space-y-2">
          <%= f.label :password_confirmation, class: 'font-semibold' %>
          <%= f.password_field :password_confirmation, class: 'px-4 py-2 border rounded shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
        </div>
        <div class="flex justify-center mt-4">
          <%= f.submit class: 'py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
